<!DOCTYPE html>
<html lang="en">
<head>

    <title>All products</title>
    <%- include('../layouts/head') %> 

</head>
<body>

    <header>

        <%- include('../layouts/header') %> 


    </header>


    <main>

        <div class="wrap">
            <% data.forEach(e=>{ %>

                <div class="card">
                    <img src="<%=e.image%>" alt="">

                    <h3>
                        <%= e.name%>
                    </h3>
    
                    <h4>
                        Price:<%= e.price%>
                    </h4>
    
                    <p>
                        <%=e.description%>
                    </p>
                    <form action="/saveData" method="POST">
    
                        <input type="hidden" name="image" value="<%=e.image%>"> 
                        <input type="hidden" name="name" value="<%= e.name%>"> 
                        <input type="hidden" name="price" value="<%= e.price%>"> 
                        <input type="hidden" name="description" value="<%=e.description%>"> 
    
                        <button type="submit">Add to Cart</button>
    
    
                    </form>
                </div>



            <%}) %> 
        </div>

    </main>

    <footer>

        <%- include('../layouts/footer') %> 


    </footer>
    
</body>
</html>